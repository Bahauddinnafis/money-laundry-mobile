<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DaftarTransaksiFragment">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/iv_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Title Text -->
    <TextView
        android:id="@+id/tv_daftarTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar Transaksi"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LinearLayout containing filter buttons -->
    <LinearLayout
        android:id="@+id/filter_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_daftarTransaksi"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="4">

        <!-- All Transactions Filter Button (Selected by default) -->
        <Button
            android:id="@+id/btn_all_transactions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Semua transaksi"
            android:textColor="@color/white"
            android:background="@drawable/button_selected_background"
            android:textSize="14sp"
            android:padding="8dp" />

        <!-- Completed Transactions Filter Button -->
        <Button
            android:id="@+id/btn_completed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selesai"
            android:textColor="@color/white"
            android:background="@drawable/button_unselected_background"
            android:textSize="14sp"
            android:padding="8dp" />

        <!-- In Progress Transactions Filter Button -->
        <Button
            android:id="@+id/btn_in_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Proses"
            android:textColor="@color/white"
            android:background="@drawable/button_unselected_background"
            android:textSize="14sp"
            android:padding="8dp" />

        <!-- Canceled Transactions Filter Button -->
        <Button
            android:id="@+id/btn_canceled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batal"
            android:textColor="@color/white"
            android:background="@drawable/button_unselected_background"
            android:textSize="14sp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Additional Filter Button -->
    <Button
        android:id="@+id/btn_filter_lanjutan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="Filter Lanjutan"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_filter"
        android:background="@drawable/button_advanced_filter_background"
        app:layout_constraintTop_toBottomOf="@id/filter_buttons_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
