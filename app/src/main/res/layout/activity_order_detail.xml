<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".transaction.OrderDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_detail_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Pesanan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_detail_pesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_pesanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cardview_background_gradient"
                android:padding="16dp">

<!--                Customer -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Customer"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Customer"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="8dp"
                    android:textColorHint="@color/white"/>

<!--               Paket Laundry -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Paket"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Paket Laundry"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="8dp"/>

<!--               No Telp -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="No Telp"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0813265648"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="8dp"
                    android:textColorHint="@color/white"/>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"/>

<!--               Add-ons -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Add-ons"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Addons"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"/>

<!--              Berat  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Berat"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="10 Kg"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="8dp"/>

<!--               Order Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Order Date"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="19 Januari 1945"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="8dp"/>

<!--              Pickup Date  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Pickup Date"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="22 Januari 1945"
                    android:textColorHint="@color/white"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Status Pembayaran"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <RadioGroup
                    android:id="@+id/radioGruoup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <RadioButton
                        android:id="@+id/radioLunas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button_background"
                        android:padding="10dp"
                        android:layout_marginEnd="16dp"
                        android:text="Lunas"
                        android:textColor="@android:color/black"
                        />

                    <RadioButton
                        android:id="@+id/radioBelumBayar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button_background"
                        android:padding="10dp"
                        android:text="Belum Bayar"
                        android:textColor="@android:color/black" />

                </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/card_detail_pesanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Detail Pesanan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pesanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_addons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Addons"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_addons1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/tv_addons"
            app:layout_constraintEnd_toEndOf="parent">

<!--          Addons 1  -->
            <TextView
                android:id="@+id/tv_addons1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarung "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_jumlah1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 : "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_harga1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 15.000"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_addons2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/ll_addons1"
            app:layout_constraintEnd_toEndOf="parent">

            <!--          Addons 2  -->
            <TextView
                android:id="@+id/tv_addons2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarung "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_jumlah2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 : "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_harga2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 15.000"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_addons3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/ll_addons2"
            app:layout_constraintEnd_toEndOf="parent">

            <!--          Addons 3  -->
            <TextView
                android:id="@+id/tv_addons3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarung "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_jumlah3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 : "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_harga3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 15.000"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/ll_addons3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_harga_laundry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/view3"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_harga_laundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Laundry Utama :  "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_harga_laundry_utama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 75.000"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/ll_harga_laundry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_harga_addons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/view4"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_harga_addons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Item Tambahan :  "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_harga_item_tambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 75.000"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/ll_harga_addons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_total_transaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/view5"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total transaksi :  "
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_total_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 150.000"
                android:textSize="14sp"/>

        </LinearLayout>

<!--      Linear Layout Button  -->
        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/ll_total_transaksi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_buat_pesanan"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Buat Pesanan"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/button"/>

            <Button
                android:id="@+id/btn_batalkan"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Batalkan"
                android:textColor="@color/white"
                android:backgroundTint="@color/button"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>